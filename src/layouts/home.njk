---
layout: base
---

<header class="hero">
  <div class="hero-content">
    <div style="display: flex; flex-direction:column; align-items:center;">
        <img src="images/heroimages/hero-1.jpg" style="height: 200px; width: 200px"/>
        <h3 style="text-align:center;"><a href="/about">Andrew Blakey</a>'s' blog about robotics, geography, programming, and parenting.</h3>
    </div>

    {% if site.socialLinks %}
      <ul class="hero__social-links">
        {% for item in site.socialLinks %}
          {% set externalAttribute = '' %}

          {% if item.external %}
            {% set externalAttribute = 'target="_blank" rel="noopener noreferrer"' %}
          {% endif %}

          <li>
            <a href="{{ item.url | url }}" {{ externalAttribute | safe }}>{{ item.text }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>

</header>

<section class="post-list__wrapper">
  {# <h2 class="post-list__heading">Recent Posts</h2> #}

  {% set postslist = collections.posts | head(-5) %}
  {% include "posts-list.njk" %}

</section>

<a class="all-posts-link" href="{{ '/blog/' | url }}">All Posts</a>
